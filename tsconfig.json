{
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
  